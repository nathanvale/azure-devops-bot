      const emptyWorkItemsResponse: unknown[] = []
      const emptyUserResponse = '[]'

      mockExecAsync
        .mockResolvedValueOnce({ stdout: JSON.stringify(workItemsResponse) })
        .mockResolvedValueOnce({
          stdout: JSON.stringify(emptyWorkItemsResponse),
        })
